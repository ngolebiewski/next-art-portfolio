generator client {
  provider = "prisma-client-js"
}

// MySQL || Postgres, that is the question...
datasource db {
  // provider = "mysql"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artwork {
  id          Int        @id @default(autoincrement())
  title       String
  size        String
  year        Int
  date        DateTime?
  description String?
  etsyUrl     String?
  imageUrl    String
  type        ArtworkType
  source      SourceType
  order       Int?      // Use to specify image order on portfolio pages
  seriesId    Int?      // Foreign key to Series
  series      Series?   @relation(fields: [seriesId], references: [id])
  mediums     Medium[]  @relation("ArtworkMedium")
  tags        Tag[]     @relation("ArtworkTag")
}

model Series {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  artworks Artwork[] // One-to-Many relation
}

model Medium {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  artworks  Artwork[] @relation("ArtworkMedium")
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  artworks  Artwork[] @relation("ArtworkTag")
}

model Tech {
  id            Int       @id @default(autoincrement())
  projectTitle  String
  headline      String
  imageUrl      String
  role          String
  gifUrl        String?
  description   String
  date          DateTime
  githubUrl     String
  deployedUrl   String
  technologies  Technology[] @relation("TechTechnology")
}

model Technology {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  techs     Tech[]    @relation("TechTechnology")
}

enum ArtworkType {
  NLBS
  painting
  film
  art
}

enum SourceType {
  studio
  instagram
  tumblr
}
